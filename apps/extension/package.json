{
  "name": "@subarashi/extension",
  "version": "1.0.0",
  "description": "Chrome extension to load SubtitleOctopus on Crunchyroll videos",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "build:firefox": "BROWSER=firefox vite build",
    "dev:firefox": "BROWSER=firefox vite build --watch",
    "build:all": "vite build && BROWSER=firefox vite build",
    "dev:all": "concurrently \"vite build --watch\" \"BROWSER=firefox vite build --watch\""
  },
  "devDependencies": {
    "@types/chrome": "^0.1.28",
    "@types/node": "^22.10.2",
    "@types/webextension-polyfill": "^0.12.4",
    "concurrently": "^9.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "dependencies": {
    "libass-wasm": "^4.1.0",
    "webextension-polyfill": "^0.12.0"
  }
}
